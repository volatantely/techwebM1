// backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:123456789@localhost:5433/bdweb"
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  desc        String
  price       Float
  image       String
  description String
  details     String[] // ou Json si tu préfères
}


